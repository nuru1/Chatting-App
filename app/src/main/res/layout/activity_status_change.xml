<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asif.chat.StatusChangeActivity">
<include layout="@layout/app_bar_layout" android:id="@+id/status_tabBar"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/newStatusLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_tabBar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/newStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/newStatusLayout"
        android:layout_marginEnd="52dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/orange"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/save_changes" />

</RelativeLayout>
